<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geophotoloc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="MAPBOX_MAPID"
            android:value="patux.map-bv4ggka0" />

        <activity
            android:name="com.example.geophotoloc.MainActivity"
            android:label="Jonanvc -> The best :)"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.geophotoloc.GetLocation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.geophotoloc.ActivitySeleccion"
            android:label="@string/title_activity_activity_seleccion" >
        </activity>
        <activity
            android:name="com.example.geophotoloc.ActivityPreferencias"
            android:label="@string/title_activity_activity_preferencias" >
        </activity>
    </application>

</manifest>
